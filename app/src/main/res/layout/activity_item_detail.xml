<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity">

    <TextView
        android:id="@+id/tv_itemName_itemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spirit Vessel"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/lin_header_itemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemName_itemDetail">
        <ImageView
            android:id="@+id/iv_itemIcon_itemDetail"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Effect:"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_itemEffect_itemDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Effect, Passive Effect"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Cost:"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_itemCost_itemDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_judulBody_itemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lin_header_itemDetail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Detail" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lin_judulBody_itemDetail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonus:"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_itemBonus_itemDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Bonus"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actvite: "
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_itemActiveName_itemDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soul Release"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_itemActiveDetail_itemDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Active"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>