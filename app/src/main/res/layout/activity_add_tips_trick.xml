<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sementara.AddTipsTrickActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_tambah_addTipsTrick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_title_addTipsTrick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/et_konten_addTipsTrick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Isi Konten"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/et_thumbnail_addTipsTrick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link bambarna asupkeun kadieu"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_tambah_addTipsTrick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>