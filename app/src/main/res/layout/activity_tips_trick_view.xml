<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flatabu"
    tools:context=".TipsTrickViewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_tipstrickView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Tips &amp; Trick"
        app:titleTextColor="#fff"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tipstrickView"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_tipstrickView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Title"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textAlignment="center"/>
            <View
                android:id="@+id/batas1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#dedede"/>

            <ImageView
                android:id="@+id/iv_thumbnail_tipstrickView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/batas1"/>
            <View
                android:id="@+id/batas2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#dedede"/>

            <TextView
                android:id="@+id/tv_konten_tipstrickView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:text="kontent"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>